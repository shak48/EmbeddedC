#ifndef INC_STM32F407XX_SPI_DRIVER_H_
#define INC_STM32F407XX_SPI_DRIVER_H_



typedef struct
{
	SPI_DviceMode;
	SPI_BusConfig;
	SPI_SclkSpeed;
	SPI_DFF;
	SPI_CPHA;
	SPI_CPOL;
	SPI_SSM;
}SPI_Config_t;

typedef struct
{
	SPI_RegDef_t *pSPIx;
	SPI_Config_t SPI_Config;
}SPI_Handle_t;


#endif /* INC_STM32F407XX_SPI_DRIVER_H_ */
